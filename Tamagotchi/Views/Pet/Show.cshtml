<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    <h2>@Model.PetName</h2>
    <p>@Model.PetStatus</p>
    <ul>
      <li>Food: @Model.PetFood</li>
      <form action="/pet/{id}/food" method="post">
        <input type="hidden" name="id" value="@Model.Id">
        <button type="submit" name="foodbutton">Feed @Model.PetName</button>
      </form>
      <li>Rest: @Model.PetRest</li>
      <form action="/pet/{id}/rest" method="post">
        <input type="hidden" name="id" value="@Model.Id">
        <button type="submit" name="restbutton">Let @Model.PetName sleep</button>
      </form>
      <li>Attention: @Model.PetAttention</li>
      <form action="/pet/{id}/play" method="post">
        <input type="hidden" name="id" value="@Model.Id">
        <button type="submit" name="playbutton">Play with @Model.PetName</button>
      </form>
    </ul>
    <a href='/pet/new'>Add another Tamagotchi</a>
    <a href='/pet'>View all Tamagotchi</a>
  </body>
</html>